if (typeof CopyUserToProyectoCodigo === "undefined") var CopyUserToProyectoCodigo = {};

CopyUserToProyectoCodigo.OnSave = function(executionContext) {
    var formContext = executionContext.getFormContext();

    var src = formContext.getAttribute("tema_codigo_proyecto");
    var dst = formContext.getAttribute("tema_litogl_tc_cp_idproyecto");
    if (!src || !dst) return;

    var v = src.getValue();
    if (v && v.length > 0) {
        // Copia solo el nombre (string) al campo de texto
        dst.setValue(v[0].name || "");
    }
};
